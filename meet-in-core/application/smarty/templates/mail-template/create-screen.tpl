		files['idx_' + idx ] = $(obj).val();
		files_idx++;
	});

	var $dropArea = $("#drop-area");

	$("#drop-area").fileDrop({
		dropEach: function(f, val) {
			if(Object.keys(files).length >= 3){
				alert('ファイルは3つまでです');
				return;
			}
			if( f.size >= 10485760){
				alert('ファイルサイズは10Mまでです');
				return;
			}
			if ( f.name.indexOf(",") >= 0 ){
				alert('無効なファイル名が含まれてます');
				return;
			}
			files['idx_'+files_idx] = f;
			$('#file-list').append( '<li class="up_file_tag" id="file_'+files_idx+'"><span class="up_file_name">'+ f.name +'</span><a href="javascript:void(0)" onclick="filedel('+files_idx+');"><span class="up_file_del">×</span></a></li>' );
			files_idx++;
		}
	});


	$("#file_up").on("click", function() {
		$(".file_up_button").click();
	})


	$('.file_up_button').change(function(){
		if(Object.keys(files).length >= 3){
			alert('ファイルは3つまでです');
			return;
		}
