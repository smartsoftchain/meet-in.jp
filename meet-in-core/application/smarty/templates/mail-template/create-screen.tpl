// HTML&TEXT切り替え
$('[name=mail_type]').change(function(e){
	if($(e.target).val()==='1'){
		// 入力内容を保持
		var txt = $('#bodytext').val();
		// 改行記号を置き換え
		txt = txt.replace(/<br>/g, '\n');
		// pタグを削除・書き換え
		txt = txt.replace(/<p>/g, '');
		txt = txt.replace(/<\/p>/g, '\n');
		// テキスト置き換え処理
		$("#bodytext").val(txt);
		$('#bodytext').trumbowyg('destroy');
	}
	else{
		// 入力内容を保持
		var txt = $('#bodytext').val();
		// 改行記号を統一化・改行ごとに配列で取得
		txt = txt.replace(/\r\n/g, '\n');
		txt = txt.replace(/\r/g, '\n');
		var lines = txt.split('\n');
		var replacedTxt = "";
		// 配列の末尾に改行記号を入れる
		for(var i = 0; i < lines.length; i++) {
			if(lines.length <= 1) {
				replacedTxt = lines[i];
			} else if (lines[i].length > 0) {
				replacedTxt = replacedTxt + "<p>" + lines[i] + "</p>";
			} else {
				replacedTxt = replacedTxt + lines[i] + "<br>";
			}
		}
		// テキスト置き換え処理
		$("#bodytext").val(replacedTxt);
		$('#bodytext').trumbowyg({
			lang: 'ja',
		});
	}
