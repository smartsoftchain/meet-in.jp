// サブミット処理
$(function() {

	$('#submit_button').click(function(){

		var $fd = $('#mail_template');
		var form = new FormData($fd[0]);
		Object.keys(files).forEach(function (key){
			form.append("attached[]", files[key]);
		});
		// HTML形式の場合、編集DOMのHTMLを直接送付
		if($("input[name=mail_type][value=2]").prop("checked")){
			var mailBody = $(".trumbowyg-editor").html();
			form.set('bodytext', mailBody);
		}
		$.ajax($fd.attr("action"), {
			type: 'post',
			processData: false,
			contentType: false,
			data: form,
			success: function(response){
				data = jQuery.parseJSON(response);
				if(data["status"] === true) {
					alert("メールテンプレートを作成しました。");
					window.location.href = "/mail-template";
				} else if (data["status"] === false) {
					alert(data["result"].join('\n'));
				} else {
					alert("サーバーエラーです。管理者にお問い合わせください。");
				}
			},
			error: function(XMLHttpRequest, textStatus, errorThrown) {
				alert("サーバーエラーです。管理者にお問い合わせください。");
			}
		});
	});

	return false;

});

