// HTMLプレビュークリック時に位置情報を保存
$(document).on("click", "div.trumbowyg-editor", function(){
	sel = window.getSelection();
	range = sel.getRangeAt(0);
})

// HTMLプレビュー時の差し込み処理
function insertTextPreview(text) {
	// カーソル位置が未定義の場合処理を中断
	if(!sel && !range) {
		$("div.trumbowyg-editor").append(text)
		return
	}
	// カーソル位置がエディター内であることを確認
	if(sel.anchorNode.className !== "trumbowyg-editor" && $(sel.anchorNode).parents(".trumbowyg-editor").length == 0) {
		$("div.trumbowyg-editor").append(text)
		return
	}
	//textnodeを作成
	var textNode = document.createTextNode(text);
	// 選択箇所の先頭から、textnodeを挿入
	range.insertNode(textNode);
	// 選択位置を終端に変更
	sel.collapseToEnd();
	range = sel.getRangeAt(0);
}

// textareaへの差し込み処理
function insertTextTextarea(text) {
	var textarea = $('#bodytext');
	textarea.focus();
	// 選択位置を取得
	var index = textarea.selection('getPos')
	// 選択位置にタグを差し込んだ文章を生成
	var new_txt = textarea.val().substring(0, index.start) + text + textarea.val().substr(index.start);
	// textarea内の値を置き換え
	textarea.val(new_txt);
	// タグ挿入後のキャレット位置を調整
	var new_caret_position = index.start + text.length;
	textarea.selection('setPos', {start: new_caret_position, end: new_caret_position});
}

