		files['idx_'+files_idx] = this.files[0];
		tag ='<li class="up_file_tag" id="file_'+files_idx+'"><span class="up_file_name">'+ this.files[0].name +'</span><a href="javascript:void(0)" onclick="filedel('+files_idx+');"><span class="up_file_del">×</span></a></li>' ;
		$('#file-list').append(tag);
		files_idx++;
	});
});

function filedel(idx){
	$('#file_'+idx).remove();
	delete files['idx_'+idx];
};

